rules_version = '2';

// Firebase Storage Security Rules
service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow authenticated users to read all files
    match /{allPaths=**} {
      allow read: if request.auth != null;
    }
    
    // Allow anyone to upload to services folder (unauthenticated write)
    match /services/{fileName} {
      allow write: if true;
      allow delete: if request.auth != null;
    }
    
    // Also support nested structure if needed
    match /services/{serviceId}/{fileName} {
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }
    
    // Allow authenticated users to upload to other media folders
    match /media/{allPaths=**} {
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }
  }
}
