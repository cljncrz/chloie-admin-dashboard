rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Allow authenticated users to read all files
    match /{allPaths=**} {
    	allow read, write: if request.auth != null;
    }


    // Allow public read and write to services folder (no authentication required)
    match /services/{fileName} {
      allow read, write: if true;
      allow delete: if request.auth != null;
    }

    // Allow public read and write to technician-pictures folder (no authentication required)
    match /technician-pictures/{allPaths=**} {
      allow read, write: if true;
      allow delete: if request.auth != null;
    }

    // Allow authenticated users to upload damage reports
    match /damage_reports/{userId}/{fileName} {
    	allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
      allow delete: if request.auth != null && request.auth.uid == userId;
    }

    // Allow public read access to profile images
    match /users/{userId}/profile.jpg {
      allow read;
      // Only allow a user to write to their own profile image path
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}